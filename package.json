{
  "name": "conplement-react-ssr-typescript-ssr-scss-boilerplate",
  "version": "1.0.0",
  "repository": "https://github.com/conplementAG/ReactSSRTypescriptScssBoilerplate",
  "license": "MIT",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "start:prod": "cross-env NODE_ENV=production node build/server.js",
    "lint-fix": "tslint --fix --project tsconfig.json 'src/**/*{.ts,.tsx}'"
  },
  "dependencies": {
    "express": "4.16.4",
    "react": "16.6.0",
    "react-dom": "16.6.0",
    "react-router-dom": "4.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.8",
    "@types/node": "^10.12.0",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/webpack-env": "^1.13.6",
    "babel-eslint": "^7.2.3",
    "cross-env": "^5.2.0",
    "razzle": "2.4.0",
    "razzle-plugin-typescript": "^2.4.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.3"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
